<% var home = true %>

<% if (data.featured) { %>
  <% var item = data.featured %>
  <section class='section-featured'>
  <div class="card card--featured ratio" href="<%= item.type + '/' + item.id %>">
    <div class="card__inner ratio__inner">
      
      <% if (item.img) { %>
        <picture class='card__img card__img--stretched'>
          <source media="(min-width: 650px)" srcset="<%= item.img.md %>">
          <source media="(min-width: 465px)" srcset="<%= item.img.sm %>">
          <img src="<%= item.img.lg %>" alt="<%= item.img.alt %>" style="width:auto;">
        </picture>
        <% } else {  %>
          <div class='ratio__inner media__fb'></div>
        <% } %>
    
    
      
      <div class="card__info">
        <h2 class='card__title'>
          <%= item.title %>
        </h2>
        <h3 class='card__subtitle'>
          <%= item.author ? item.author : item.subtitle %>
        </h3>
      </div>
    </div>
  </div>
</section>
<% } %>

<div class="layout layout--detail">
  <div class="layout--left">
    <article class="">
      
      <%- data.content %>
      
  
      
    </article>

  </div>
  
  <div class="layout--right">
    <aside class="">
      
    </aside>
  </div>
</div>

<% var section = data.course %>
<section class='section-cards'>
  <header class='section__header'>
    <h3>
      <%= section.title %>
    </h3>
    <%if (home) { %>
    <a data-navigo href="<%= section.link %>">view all</a>
    <% } %>
  </header>
  <ul class='section__cards'>
    <%if (home) { %>
    <% section.items.slice(0, 3).forEach(function(item) { %>
    <li class='section__card'> <a class="card" href="<%= item.type + '/' + item.id %>" data-navigo>
  <div class="ratio">
    <picture class='card__img card__img--stretched' lazyload="on">
      <source media="(min-width: 650px)" srcset="<%= item.img.md %>">
      <source media="(min-width: 465px)" srcset="<%= item.img.sm %>">
      <img src="<%= item.img.lg %>" alt="<%= item.img.alt %>" style="width:auto;">
    </picture>
  </div>
  <div class="card__info">
    <h3 class='card__title'>
      <%= item.title %>
    </h3>
    <div class='card__description'>
      
      
        <% if (item.description.length > 200) { %>
          <%- item.description.substring(0, 200) + '...' %>
<% } else { %>
<%- item.description %> 
<% } %>
    </div>
  </div>
</a> </li>
    <% }); %>
    <% } else { %>
    <% section.items.forEach(function(item) { %>
    <li class='section__card'> <a class="card" href="<%= item.type + '/' + item.id %>" data-navigo>
  <div class="ratio">
    <picture class='card__img card__img--stretched' lazyload="on">
      <source media="(min-width: 650px)" srcset="<%= item.img.md %>">
      <source media="(min-width: 465px)" srcset="<%= item.img.sm %>">
      <img src="<%= item.img.lg %>" alt="<%= item.img.alt %>" style="width:auto;">
    </picture>
  </div>
  <div class="card__info">
    <h3 class='card__title'>
      <%= item.title %>
    </h3>
    <div class='card__description'>
      
      
        <% if (item.description.length > 200) { %>
          <%- item.description.substring(0, 200) + '...' %>
<% } else { %>
<%- item.description %> 
<% } %>
    </div>
  </div>
</a> </li>
    <% }); %>
    <% } %>
  </ul>
</section>