<% var item = data %>
<% var home = false %>

<section class='section-featured'>
  <div class="card card--featured ratio" href="<%= item.type + '/' + item.id %>">
    <div class="card__inner ratio__inner">
      
      <% if (item.img) { %>
        <picture class='card__img card__img--stretched'>
          <source media="(min-width: 650px)" srcset="<%= item.img.md %>">
          <source media="(min-width: 465px)" srcset="<%= item.img.sm %>">
          <img src="<%= item.img.lg %>" alt="<%= item.img.alt %>" style="width:auto;">
        </picture>
        <% } else {  %>
          <div class='ratio__inner media__fb'></div>
        <% } %>
    
    
      
      <div class="card__info">
        <h2 class='card__title'>
          <%= item.title %>
        </h2>
        <h3 class='card__subtitle'>
          <%= item.author ? item.author : item.subtitle %>
        </h3>
      </div>
    </div>
  </div>
</section>


<div class="layout layout--detail">
  <div class="layout--left">
    <article class="">
      
      
      <p><%- data.description %></p>
      
      <% if (data.github) { %>
        <a href="#" class='button button--accent'>View the repo <%= data.github %></a>
      <% } %>
      
    </article>

    <section class='section-cards'>
      <header class='section__header'>
        <% if (data.github) { %>
          <h3>
            View the student work:
          </h3>
        <% } else { %>
          <h3>
            Ai.... Nothing available yet. Check another course!
          </h3>
        <% } %>
        

      </header>
      <ul class='section__cards fn-forks'>

      </ul>
    </section>
  </div>
  
  <div class="layout--right">
    <aside class="">
      
    </aside>
  </div>
</div>